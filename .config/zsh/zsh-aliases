### Convert to PDF
alias doctopdf="libreoffice --headless --convert-to pdf:writer_pdf_Export"
mdtopdf() {
    fullname=$(basename -- "$1")
    filename="${fullname%.*}"
    pandoc "$fullname" -t beamer -o "$filename.pdf"
}

### Cheat
cheat() {
    curl "cheat.sh/$1"
}

