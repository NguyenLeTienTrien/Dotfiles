configuration {

    font: "Hack Nerd Font 15";
    modi: "window,run,drun";

    display-ssh:    " ";
    display-run:    " ";
    display-drun:   " ";
    display-window: " ";
    display-combi:  " ";
    show-icons:     true;

}

@theme "/dev/null"

* {
    background-color: transparent;
    
    border: 0;
    margin: 0;
    padding: 10;
    spacing: 0;
}

window {
    width: 100%;
    height: 95%;
    background-color: #00000033;
}

mainbox {
    children: [ inputbar, listview ];
}

inputbar {
    color: #eceff4;
    background-color: #eceff433;
    padding: 0;

    border: 2;
    border-radius: 30;
    border-color: #9699a3;
}

entry, prompt, case-indicator {
    text-font: inherit;
    text-color:inherit;
}

listview {
    padding: 50;
    border: 0;
    columns: 2;
}

element {
    padding: 0;
    margin: 20;
    border-radius: 40;
    background-color: transparent;
    text-color: #b2b9d4f2;
}

element selected.normal {
    background-color: #eceff466;
    text-color: #ffffff;
}

element-icon {
    background-color: inherit;
    text-color:       inherit;
    border-radius: 40;
    size: 40;
}

element-text {
    background-color: transparent;
    text-color:       inherit;
}

